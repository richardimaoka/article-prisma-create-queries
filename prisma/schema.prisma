// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engine   = "client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/////////////////////////////////
// unreleated 
/////////////////////////////////
model User {
  id   Int    @id @default(autoincrement())
  name String
}

/////////////////////////////////
// one-to-one
/////////////////////////////////
model UserWithBio {
  id   Int    @id @default(autoincrement())
  name String
  bio  Bio?
}

model Bio {
  id     Int         @id @default(autoincrement())
  text   String
  user   UserWithBio @relation(fields: [userId], references: [id])
  userId Int         @unique
}
